[[[

  ############################################################
  # Stuff we do by Default.
  ############################################################

  ############################################################
  # Title.
  ############################################################
  MACRO uri_title BLOCK;
    '<title>'; title; '</title>';
  END;

  ############################################################
  # Javascript Loader.
  ############################################################
  MACRO link_js BLOCK;
    '<script type="text/javascript" src="/'; loc; '"></script>';
  END;

  ############################################################
  # Stylesheet.
  ############################################################
  MACRO link_css BLOCK;
    '<link rel="stylesheet" type="text/css" href="/'; loc; '" />';
  END;

  ############################################################
  # Relative HTML Link.
  ############################################################
  MACRO href BLOCK;
    '<a href="/'; loc; '">'; title; '</a>';
  END;

  ############################################################
  # Relative HTML Link.
  ############################################################
  MACRO lihref BLOCK;
    '<li><a href="/'; loc; '">'; title; '</a></li>';
  END;

  ############################################################
  # Start.
  # These are code snippets that we need.
  ############################################################
  TRY;
    PROCESS menubar.inc;
  CATCH;
    error;
    'ERROR Rendering...';
  END;

]]]
